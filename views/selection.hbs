<form action="/selection/select" method="post" accept-charset="utf-8">
  <table class="table">
    <thead>
      <tr>
        <th>
          Name
          <button value="name=1" class="btn btn-primary btn-xs filterselection-btn" type="button"><span class="glyphicon glyphicon-chevron-up"></span></button>
          <button value="name=-1" class="btn btn-primary btn-xs filterselection-btn" type="button"><span class="glyphicon glyphicon-chevron-down"></span></button>
        </th>
        <th>
          Seltenheit
          <button value="" class="btn btn-primary btn-xs filterselection-btn" type="button"><span class="glyphicon glyphicon-chevron-up"></span></button>
        <th>
          Level
          <button value="level=1" class="btn btn-primary btn-xs filterselection-btn" type="button"><span class="glyphicon glyphicon-chevron-up"></span></button>
          <button value="level=-1" class="btn btn-primary btn-xs filterselection-btn" type="button"><span class="glyphicon glyphicon-chevron-down"></span></button></th>
        <!--<th>Auswahl</th>-->
      </tr>
    </thead>
    <tbody>
      <!-- {{data.current}} -->
    {{#if data.equitment}}
     {{#each data.equitment}}
      <tr class="{{#if options.toHigh}}danger{{/if}}{{#if options.toLow}}warning{{/if}}{{#if options.selectiable}}success{{/if}}">
        <td>
            {{raw.name}}<br>
           <!-- <label class="radio-inline"><input type="radio" name="firstradio">first</label><label class="radio-inline"><input type="radio" name="secondradio">second</label><label class="radio-inline"><input type="radio" name="thirdradio">third</label>-->
        </td>
        <td>{{#ifNotEquals raw.rarity 'common'}}{{raw.rarity}}{{/ifNotEquals}}</td>
        <td>{{raw.level}}</td>
      </tr>
      {{#if raw.ability}}
      <tr class="{{#if options.toHigh}}danger{{/if}}{{#if options.toLow}}warning{{/if}}{{#if options.selectiable}}success{{/if}}">
        <td  colspan="3" style="border-top-style: none" >
          Effekt: {{raw.ability}}
        </td>
      </tr>
      {{/if}}
      <tr class="{{#if options.toHigh}}danger{{/if}}{{#if options.toLow}}warning{{/if}}{{#if options.selectiable}}success{{/if}}">
        <td colspan="3" style="border-top-style: none" >
          <label class="radio-inline"><input value={{raw._id}} type="radio" name="firstradio" {{#if options.selection.first}}checked="checked"{{/if}} {{#if ../notAuthorized}}disabled{{/if}}>first</label>
          <label class="radio-inline"><input value={{raw._id}} type="radio" name="secondradio" {{#if options.selection.second}}checked="checked"{{/if}} {{#if ../notAuthorized}}disabled{{/if}}>second</label>
          <label class="radio-inline"><input value={{raw._id}} type="radio" name="thirdradio" {{#if options.selection.third}}checked="checked"{{/if}} {{#if ../notAuthorized}}disabled{{/if}}>third</label>
        </td>
      </tr>
      {{/each}}
    {{/if}}
    
      <tr>
          <td colspan="3">
            <input type="submit" name="submit" value="Auswahl" id="submit" class="btn btn-primary btn-block btn-flat" {{#if options.notAuthorized}}disabled{{/if}}>
          </td>
      </tr>
    </tbody>
  </table>
</form>

