{{> nav}}
<div class="container">
  <button value="new" class="btn btn-primary btn-xs editeq-btn"><span class="fa fa-plus"></span></button>
  <table id="mytable" class="table table-bordred table-striped">
    <thead>
      <th>Name</th>
      <th>Level</th>
      <th>Seltenheit</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>
    <tbody>
      {{#if data.equitment}}
      {{#each data.equitment}}
        <tr>
          <td>{{name}}<br></td>
          <td>{{rarity}}</td>
          <td>{{level}}</td>
          <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button value="{{_id}}" class="btn btn-primary btn-xs editeq-btn" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
          <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button value="{{_id}}" class="btn btn-danger btn-xs deleteeq-btn" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
        </tr>
        <!--
        {{#if ability}}
        <tr>
          <td  colspan="3" style="border-top-style: none" >
            Effekt: {{ability}}
          </td>
        </tr>
        {{/if}}
        -->
      {{/each}}
      {{/if}}    
    </tbody> 
  </table>
</div>