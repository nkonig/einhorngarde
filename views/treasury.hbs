            <p data-placement="top" data-toggle="tooltip" title="Edit"><button type="button" class="btn btn-primary btn-xs editseason-btn" data-title="Edit" data-toggle="modal" data-target="#edit" value="{{_id}}"><span class="glyphicon glyphicon-pencil"></span></button></p>
        </td>
      </tr>
      {{/each}}
    <tr>
        <td colspan="3">
            <input type="submit" name="submit" value="Auswahl" id="submit" class="btn btn-primary btn-block btn-flat">            </div>
        </td>
      </tr>
    </tbody>
  </table>
