<h3>Wilkommen in der Kriegskammer {{user.name}}</h3>

<hr>
<h3>Clankriegsteilnahme eintragen</h3>
<table>
  <tbody>
    {{#if treasurer}}
    <tr>
      <td><label>Clan:</label></td>
      <td>
        <select class="form-control" name="clan" id="clan_sel">    
            {{#each clans}}
                <option {{#ifEquals ../season.clan _id }}selected="selected"{{/ifEquals}} name="clan" value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
      </td>
    </tr>
    {{/if}}
    <tr>
      <td><label>Tag:</label></td>
      <td><input type="date" class="form-control" name="ckday" min="{{season.startformated}}" max="{{season.endformated}}"></td>
    </tr>
    <tr>
      <td><label>Stunde:</label></td>
      <td>
        <select class="form-control" name="ckhour" id="ckhour_sel">
          <option value="04:00">04:00</option>
          <option value="11:00">11:00</option>
          <option value="16:00">16:00</option>
          <option value="22:00">22:00</option>
        </select>
      </td>
    </tr>
  </tbody>
</table>



